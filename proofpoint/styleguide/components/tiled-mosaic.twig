<div class="tiled-mosaic">
  <div class="container">
    <div class="tiled-mosaic__filter">
      <div class="tiled-mosaic__list">
        <div class="tiled-mosaic__list__item"><a class="icon-news-ppoint active" href="#">All</a></div>
        <div class="tiled-mosaic__list__item"><a class="icon-blog-ppoint" href="#">Threat Insight</a></div>
        <div class="tiled-mosaic__list__item"><a class="icon-bar-chart" href="#">ViewPoint</a></div>
        <div class="tiled-mosaic__list__item"><a class="icon-pressrelease-ppoint" href="#">Press Releases</a></div>
        <div class="tiled-mosaic__list__item"><a class="icon-media-ppoint" href="#">In the Media</a></div>
      </div>
      <div class="tiled-mosaic__select">
        <div class="form-item form-type-select">
          <div class="form-select">
            <select class="form-select">
              <option value="all" selected="selected">Narrow by keyword</option>
              <option value="1">Option 1</option>
              <option value="2">Option 2</option>
              <option value="3">Option 3</option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="tiled-mosaic__contents">
      {% for item in tiledMosaic %}
        <div class="tiled-mosaic__item">
          <a class="tiled-mosaic__link" href="#"></a>
          {% if item.type == 'Press releases' %}
            <span class="tiled-mosaic__type icon-pressrelease-ppoint"></span>
          {% elseif item.type == 'In the media' %}
            <span class="tiled-mosaic__type icon-media-ppoint"></span>
          {% elseif item.type == 'ViewPoint' %}
            <span class="tiled-mosaic__type icon-bar-chart"></span>
          {% else %}
            <span class="tiled-mosaic__type icon-blog-ppoint"></span>
          {% endif %}
          <div class="tiled-mosaic__image">
            <img src="{{img_path}}{{ item.image }}" width="920" height="620" alt="ppoint image">
          </div>
          <div class="tiled-mosaic__group">
            <div class="tiled-mosaic__group__inner">
              <h3 class="tiled-mosaic__title">{{ item.title }}</h3>
              <div class="tiled-mosaic__body">{{ item.body|truncate(206, true, "...") }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
