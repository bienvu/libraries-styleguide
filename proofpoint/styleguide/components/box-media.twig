{% set content =
  {
    'title' : 'Customer Messaging 1',
    'body' : 'At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui officia deserunt mollitia animi, id est laborum et dolorum fuga. '
  }
%}
{# Case for Image Text#}
{% block boxMedia %}
  <div class="box-media box-media--img-text bg--light-tan list-in-article">
    <div class="container">
      <div class="box-media__col-left">
        <div class="box-media__image">
          <picture>
            <source
              media="{{ desktop_wide }}"
              srcset="https://unsplash.it/580/347 1x">
            <source
              media="{{ tablet }}"
              srcset="https://unsplash.it/450/256 1x">
            <source
              media="{{ mobile_landscape }}"
              srcset="https://unsplash.it/768/360 1x">
            <source
              media="{{ mobile }}"
              srcset="https://unsplash.it/480/225 1x">
            <img
              src="https://unsplash.it/768/360"
              alt="ppoint image">
          </picture>
        </div>
      </div>
      <div class="box-media__col-right">
        <h3 class="box-media__title">{{content.title}}</h3>
        <div class="box-media__body list-in-article"><p>{{ content.body }}</p></div>
        <div class="box-media__links">
          <div class="box-media__links__item">
            <a class="more-arrow-right" href="#">Case Study Link</a>
          </div>
          <div class="box-media__links__item">
            <a class="more-arrow-right" href="#">Resources Link</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
