              <source
                media="{{ mobile }}"
                srcset="https://unsplash.it/480/225 1x">
              <img
                src="https://unsplash.it/768/360"
                alt="ppoint image">
            </picture>
          </div>
          <div class="box-stacks__content">
            <h3 class="big-title">{{item.title}}</h3>
            <div class="box-media__body"><p>{{ item.body }}</p></div>
            <div class="box-media__links">
              <div class="box-media__links__item">
                <a class="more-arrow-right" href="#">Case Study Link</a>
              </div>
              <div class="box-media__links__item">
                <a class="more-arrow-right" href="#">Resources Link</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
