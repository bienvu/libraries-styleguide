{% set stacks = [
  {
    'title': 'Benefits for Persona One',
    'body' : 'Morbi dui lectus, vestibulum sodales erat in, tristique euismod quam.'
  },
  {
    'title': 'Benefits for Persona Two',
    'body' : 'Ut vitae ex sit amet nunc lacinia sodales vel eu lectus eleifend consectetur.'
  },
  {
    'title': 'Benefits for Persona Three',
    'body' : 'Maecenas pulvinar eu elit ut laoreet. Aenean molestie orci lorem.'
  }
]
%}
{% block boxStacks %}
  <div class="box-stacks list-in-article">
    <div class="container">
      {% for item in stacks %}
        <div class="box-stacks__item">
          <div class="box-media__image">
            <picture>
              <source
                media="{{ tablet }}"
                srcset="https://unsplash.it/400/195 1x">
              <source
                media="{{ mobile_landscape }}"
                srcset="https://unsplash.it/768/360 1x">
              <source
                media="{{ mobile }}"
                srcset="https://unsplash.it/480/225 1x">
              <img
                src="https://unsplash.it/768/360"
                alt="ppoint image">
            </picture>
          </div>
          <div class="box-stacks__content">
            <h3 class="big-title">{{item.title}}</h3>
            <div class="box-media__body"><p>{{ item.body }}</p></div>
            <div class="box-media__links">
              <div class="box-media__links__item">
                <a class="more-arrow-right" href="#">Case Study Link</a>
              </div>
              <div class="box-media__links__item">
                <a class="more-arrow-right" href="#">Resources Link</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="box-stacks bg--blue list-in-article">
    <div class="container">
      {% for item in stacks %}
        <div class="box-stacks__item">
          <div class="box-media__image">
            <picture>
              <source
                media="{{ tablet }}"
                srcset="https://unsplash.it/400/195 1x">
