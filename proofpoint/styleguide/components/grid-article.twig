{% block gridArticle %}
  <div class="grid-article">
    {% for item in grid %}
      <div class="grid-article__item">
        <div class="grid-article__image">
          <picture>
            <source
              media="{{ desktop }}"
              srcset="https://unsplash.it/315/280 1x">
            <source
              media="{{ tablet }}"
              srcset="https://unsplash.it/512/380 1x">
            <source
              media="{{ mobile_landscape }}"
              srcset="https://unsplash.it/768/360 1x">
            <source
              media="{{ mobile }}"
              srcset="https://unsplash.it/480/225 1x">
            <img
              src="https://unsplash.it/768/360"
              alt="ppoint image">
          </picture>
        </div>
        <div class="grid-article__content">
          <h4 class="small-title">{{ item.smalltitle }}</h4>
          <h3 class="big-title">{{ item.bigtitle }}</h3>
          <div class="grid-article__body"><p>{{ item.body }}</p></div>
          <div class="grid-article__link"><a class="more-arrow-right" href="{{ item.href }}">Read More</a></div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
