{% set items = [] %}
{% set count  = content.field_show_hide_items['#items'].getValue() | length %}

{% for i in 0..count if i < count %}
  {% set items = items|merge([content.field_show_hide_items[i]]) %}
{% endfor %}

{%
  include '@components/26-show-hide/00-show-hide.twig' with {
    'showHide': {
      'title': content.field_title.0,
      'bgColor': bg_color,
      'items': items
    }
  } only
%}
