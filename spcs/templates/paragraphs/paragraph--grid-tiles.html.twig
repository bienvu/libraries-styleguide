{% set items = [] %}
{% set count  = content.field_tile_item['#items'].getValue() | length %}

{% for i in 0..count if i < count %}
  {% set items = items|merge([content.field_tile_item[i]]) %}
{% endfor %}

{%
  include '@components/15-grid-tiles/00-grid-tiles.twig' with {
    'gridTiles': {
      'bgColor': bg_color,
      'title': content.field_title.0,
      'subtitle': content.field_body_plain.0,
      'items': items,
    }
  } only
%}
