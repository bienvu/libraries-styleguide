{% set stat_items = [] %}
{% set count  = content.field_stats['#items'].getValue() | length %}

{% for i in 0..count if i < count %}
  {% set stat_items = stat_items|merge([content.field_stats[i]]) %}
{% endfor %}

{%
  include '@components/07-stats-block/00-block-stats.twig' with {
    'blockStats': {
      'bgColor': bg_color,
      'title': content.field_title.0,
      'items': stat_items
    }
  } only
%}
