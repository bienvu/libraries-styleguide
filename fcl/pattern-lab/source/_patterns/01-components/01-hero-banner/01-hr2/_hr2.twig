<div class="hero-banner-2 bg--dark-black--overlay">
  {% if hr2.image is not empty %}
    <div class="hero-banner-2__image">
      {{ hr2.image }}
    </div>
  {% endif %}
  {% if hr2.video is not empty %}
    <div class="hero-banner-2__video js-mute-video">
      {{ hr2.video }}
    </div>
  {% endif %}
  {% if hr2.title is not empty %}
    <div class="hero-banner-2__content text--light {{ hr2.contentAlign }}">
      <div class="container">
        <h1 class="hero-banner-2__title">{{ hr2.title }}</h1>
      </div>
    </div>
  {% endif %}
</div>
