{% block blockProductList %}
<div class="block-product bg-blue-ea">
  <div class="container">
    <h2 class="section-title no-margin-bottom">VetScan for Equine</h2>
    <h3 class="section-description">VetScan On-Site Diagnostics are easy to use, accurate and customizable for your needs. Abaxis products are exceptionally durable, and our unsurpassed support staff is ready to help whenever you need it</h3>
    <div class="block-product__grid-2col">
      {% for item in productList %}
      <div class="block-product__grid-2col__item block-product__content">
        <div class="block-product__logo">
          <img src="{{img_path}}images-pages/{{ item.logo }}" width="206" height="206" alt="product-logo">
        </div>
        <div class="block-product__body"><p>{{ item.body }}</p></div>
        <div class="block-product__image">
          <img src="{{img_path}}images-pages/{{ item.image }}" width="200" height="230" alt="product-image">
        </div>
        <div class="block-product__link">{{ item.link }}</div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
