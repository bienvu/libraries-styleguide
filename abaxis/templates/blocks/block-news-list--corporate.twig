{% block blockNewsListCorporate %}
<div class="block-news-list block-news-list--corporate">
  <div class="container">
    <h2 class="block-title block-title--border-bottom">Corporate News</h2>
    <div class="block-news-list__contents">
      <div class="block-news-list__contents__inner js-load-items-container">
        {% for item in corporateNews %}
          <article class="block-news-list__contents__item {% if loop.index > 5 %} hidden {% endif %}">
            <div class="block-news-list__image">
              <img src="{{img_path}}images-pages/{{ item.image }}" width="450" height="297" alt="new-list">
            </div>
            <div class="block-news-list__group">
              <div class="block-news-list__meta">
                <time datetime="{{ item.date|date("Y-m-d") }}">{{ item.date }}</time>
                {{ item.categories }}
              </div>
              <h2 class="block-news-list__title">{{ item.title }}</h2>
            </div>
          </article>
        {% endfor %}
        <a class="more-info link-red js-load-5-items" title="" href="#"> + 5 more news </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
