<ul class="sg-colors">
  {% for item in colors %}
    <li>
      <span class="sg-swatch" {% if item.code %} style="background: {{ item.code }};"{% endif %}></span>
      <span class="sg-label">Name: {{ item.variable }}</span>
      {% if item.code %}
        <br />
        <span class="sg-label">Code: {{ item.code }}</span>
      {% endif %}
      {% if item.class %}
        <br />
        <span class="sg-label">Class: {{ item.class }}</span>
      {% endif %}
    </li>
  {% endfor %}
</ul>
