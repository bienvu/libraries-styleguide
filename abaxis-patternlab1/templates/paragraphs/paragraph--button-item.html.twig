{% if content.field_link[0] %}
  {% set btn_size %}{{ content.field_btn_size[0] }}{% endset %}
  {% set btn_style %}{{ content.field_button_style[0] }}{% endset %}

  {% include "@elements/01-elements/01-link.twig"
    with {
      "link": {
        "class": 'btn' ~ ' btn--' ~ btn_size ~ ' btn--' ~ btn_style,
        "href": content.field_link[0]['#url'],
        "text": content.field_link[0]['#title']
      }
    }
  %}
{% endif %}
