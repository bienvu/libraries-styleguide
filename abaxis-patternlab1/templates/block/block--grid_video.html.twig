{% if content.field_title.0 is not empty or content.body.0 is not empty %}
  {% block blockInspired %}
    <div class="block-inspired contextual-region">
      {% if content.field_background_image.0 is not empty %}
        <div class="block-inspired--background-image">
          {{ content.field_background_image }}
        </div>
      {% endif %}
      {{ title_suffix }}
      <div class="container">
        <h2 class="section-title text-white no-margin">{{ content.field_title }}</h2>
        <h3 class="section-description text-white">{{ content.body }}</h3>
        {% if content.field_video_2.0 is not empty or content.field_video_3.0 is not empty %}
          <div class="grid-video--3-video js-video-slide">
            <div class="grid-video--3-video__large">
              <div class="vidyard-video">
                {{ content.field_video_1 }}
              </div>
            </div>
            <div class="grid-video--3-video__small">
              <div class="vidyard-video">
                {{ content.field_video_2 }}
              </div>
            </div>
            <div class="grid-video--3-video__small">
              <div class="vidyard-video">
                {{ content.field_video_3 }}
              </div>
            </div>
          </div>
        {% else %}
          <div class="grid-video">
            <div class="vidyard-video">
              {{ content.field_video_1 }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  {% endblock %}
{% endif %}
